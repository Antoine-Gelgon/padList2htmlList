@import url("fonts/librebaskerville/stylesheet.css");
@import url("fonts/youngserif/stylesheet.css");
@import url("fonts/inknut/stylesheet.css");
@import url("fonts/oldstandard/stylesheet.css");
@import url('http://fonts.googleapis.com/css?family=Fira+Sans:400,300italic,300,400italic,500,500italic,700,700italic&subset=latin,latin-ext')


colo2 = #970000
colo = #0030a2

body
  color colo2
  font-size 20px
  line-height 31px
  font-family 'Fira Sans'
  //font-weight 500
  margin-top 30px
  margin-left 20px
  margin-right 20px
  vertical-align baseline
  a, i, em, h1
    font-weight normal
    font-style normal
  i, em
    font-family 'Fira Sans'
    font-style italic
    font-weight 300
  a
    color colo
  .content
    margin-top 30px
    margin-left 30px
    a
      max-width 30%
      overflow hidden
      text-overflow '…'
      white-space nowrap
      display inline-block
      vertical-align bottom
      margin-bottom -2px
      text-decoration none
      font-family 'old_standard_ttitalic'
      &:hover
        text-decoration underline
  ul
    margin 0
    padding 0
    li
      margin 0
      padding 0
      list-style none
  .menuHome, .menu
    position absolute
    top 0
    left 20px
    right 20px
    padding-top 10px
    padding-bottom 0px
    background white
    font-size 28px
    font-family 'Fira Sans'
    z-index 1000
    .pourquoi
      font-family 'Fira Sans'
      position absolute
      right 0px
      text-decoration none
      &:hover
        font-style italic
        &:before
          content "Pourquoi"
    h1
      font-size 32px
      display inline
      a
        color colo2
        text-decoration none
        &:hover
          color colo
    ul
      display inline-block
      vertical-align top
      max-width 79%
      li
        font-family 'Fira Sans'
        color colo
        span, a
          text-decoration none
        a:hover
          border-bottom 2px solid colo
      ul
        margin-left 50px
    .bigCat
      a
        font-style bold
        font-weight 500
        //text-transform uppercase
    .sousCat
      a
        font-weight normal
        font-style normal
        text-transform lowercase
  .menu
    position fixed
    width 100%
    ul
      max-height 450px
      max-width 35%
      overflow-y auto
      padding-bottom 15px
      .current:after
        content '↓'
      .current:hover
        cursor s-resize
        border-bottom 2px solid colo
    .bigCat
      a
        font-weight normal
        font-style normal
        text-transform lowercase
